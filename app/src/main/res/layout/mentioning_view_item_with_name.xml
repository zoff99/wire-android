<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <com.waz.zclient.views.chathead.ChatheadImageView
        android:id="@+id/civ__mentioning_image"
        android:layout_width="@dimen/mentioning__avatar__size"
        android:layout_height="@dimen/mentioning__avatar__size"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__mentioning_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:paddingLeft="@dimen/mentioning__item__padding_inner"
        android:paddingRight="@dimen/mentioning__item__padding_inner"
        app:font="@string/wire__typeface__light"
        />

</LinearLayout>
