<com.waz.zclient.pages.main.backgroundmain.views.BackgroundFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bl__background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    >
    <!--
        the main container holding
        pager and conversation detail views
     -->
    <FrameLayout
        android:id="@+id/fl_fragment_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!--
    the overlay container onboarding hints
-->
    <FrameLayout
        android:id="@+id/fl_fragment_main_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <FrameLayout
        android:id="@+id/fl__overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.waz.zclient.views.menus.ConfirmationMenu
        android:id="@+id/cm__confirm_action_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        />


    <!--
        the in app notifications - always visible
     -->
    <FrameLayout
        android:id="@+id/fl_fragment_main_in_app_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</com.waz.zclient.pages.main.backgroundmain.views.BackgroundFrameLayout>
