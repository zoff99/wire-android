<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
    >

    <com.waz.zclient.calling.OutgoingControlsView
        android:id="@+id/ocl_outgoing_controls"
        android:layout_width="@dimen/calling__ongoing_call_controls__max_diameter"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/wire__margin__huge"
        />

    <com.waz.zclient.calling.IncomingControlsView
        android:id="@+id/icl_incoming_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/calling__controls__button_position_height"
        android:visibility="gone"
        app:avatarDiameter="@dimen/calling__controls__incoming_controls__user_avatar__dimension"
        app:buttonDiameter="@dimen/calling__controls__button__dimension"
        app:buttonExpandedDiameter="@dimen/calling__controls__incoming_controls__user_avatar__dimension"
        app:edgeToEdgeWidth="@dimen/calling__participants_max_diameter"
        />

</merge>

