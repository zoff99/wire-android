<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <com.waz.zclient.views.calling.CallingGainView
            android:id="@+id/cgv__calling__participant__gain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.waz.zclient.views.chathead.ChatheadView
            android:id="@+id/chv__calling__participant__chathead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:allow_icon="false"
            app:show_border="false"
            app:isSelectable="false"
            />

    </FrameLayout>

    <com.waz.zclient.calling.UserNameView
        android:layout_marginTop="@dimen/wire__padding__small"
        android:id="@+id/ttv__calling__participant__name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/text__primary_dark"
        android:textSize="@dimen/wire__text_size__small"
        app:font="@string/wire__typeface__light"
        />

</merge>
