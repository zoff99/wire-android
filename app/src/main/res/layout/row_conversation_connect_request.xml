<com.waz.zclient.ui.views.TouchFilterableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                                      android:orientation="vertical"
                                                      android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:background="@null"
                                                      android:gravity="center_horizontal"
                                                      android:baselineAligned="false"
                                                      android:paddingLeft="@dimen/framework__general__left_padding"
                                                      android:paddingRight="@dimen/framework__general__right_padding"
    >

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__row_conversation__connect_request__user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content__connect_request__chathead__margin_top"
        android:layout_marginBottom="@dimen/wire__padding__big"
        android:textColor="?wirePrimaryTextColor"
        android:textSize="@dimen/wire__text_size__regular"
        android:ellipsize="end"
        android:singleLine="true"
        app:font="@string/wire__typeface__light"
        />

    <com.waz.zclient.views.chathead.ChatheadView
        android:id="@+id/cv__row_conversation__connect_request__chat_head"
        android:layout_width="@dimen/profile__image__width"
        android:layout_height="@dimen/profile__image__width"
        app:show_border="false"
        />

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__row_conversation__connect_request__label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wire__padding__12"
        android:layout_marginBottom="@dimen/wire__padding__big"
        android:textColor="?wirePrimaryTextColor"
        android:textSize="@dimen/wire__text_size__small"
        app:font="@string/wire__typeface__light"
        />

</com.waz.zclient.ui.views.TouchFilterableLinearLayout>
