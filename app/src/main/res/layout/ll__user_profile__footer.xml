<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:baselineAligned="false"
              android:paddingTop="@dimen/participants__footer__padding"
              android:paddingBottom="@dimen/participants__footer__padding"
    >

    <LinearLayout
        android:id="@+id/ll__participants__left__action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1"
        >

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__participants__left__action"
            android:layout_width="@dimen/wire__icon_button__diameter"
            android:layout_height="@dimen/wire__icon_button__diameter"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/wire__padding__big"
            style="?attr/smallIconButton"
            />


        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__participants__left_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wire__padding__12"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/touch_target_buttons"
            android:gravity="left|center_vertical"
            app:font="@string/wire__typeface__light"
            style="?userFooterLabel"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll__participants__right__action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        >

        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__participants__right_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minHeight="@dimen/touch_target_buttons"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/wire__padding__small"
            app:font="@string/wire__typeface__light"
            style="?userFooterLabel"
            />

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__participants__right__action"
            android:layout_width="@dimen/wire__icon_button__diameter"
            android:layout_height="@dimen/wire__icon_button__diameter"
            android:layout_marginRight="@dimen/wire__padding__big"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            style="?attr/smallIconButton"
            />

    </LinearLayout>

</LinearLayout>
