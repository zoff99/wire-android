<resources>
    <declare-styleable name="UserChatheadView">
        <attr name="ucvBorderWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="OutgoingCallingProgressView">
        <attr name="ocpvInnerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="OngoingCallingProgressView">
        <attr name="ocpvRadius1" format="dimension"/>
        <attr name="ocpvRadius2" format="dimension"/>
        <attr name="ocpvRadius3" format="dimension"/>
        <attr name="ocpvRadius4" format="dimension"/>
        <attr name="ocpvOneRoundDuration" format="integer"/>
        <attr name="ocpvAutoAnim" format="boolean"/>
        <attr name="ocpvCircleColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="SlidingUpPanelLayout">
        <attr name="panelHeight" format="dimension"/>
        <attr name="shadowHeight" format="dimension"/>
        <attr name="paralaxOffset" format="dimension"/>
        <attr name="fadeColor" format="color"/>
        <attr name="flingVelocity" format="integer"/>
        <attr name="dragView" format="reference"/>
        <attr name="overlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpacing" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_breakLine" format="boolean"/>
        <attr name="layout_horizontalSpacing" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color"/>
        <attr name="inactiveColor" format="color"/>
        <attr name="radius" format="dimension"/>
        <attr name="spacing" format="dimension"/>
        <attr name="inactiveType">
            <flag name="stroke" value="0"/>
            <flag name="fill" value="1"/>
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0"/>
            <flag name="fill" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="InputField">
        <attr name="titleText" format="string" localization="suggested"/>
        <attr name="inputType" format="string"/>
    </declare-styleable>
    <declare-styleable name="ConfirmationMenu">
        <attr name="header" format="string"/>
        <attr name="text" format="string"/>
        <attr name="negative" format="string"/>
        <attr name="positive" format="string"/>
        <attr name="cancelVisible" format="boolean"/>
        <attr name="checkboxLabel" format="string"/>
        <attr name="checkboxIsSelected" format="boolean"/>
        <attr name="headerIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PickUserEditText">
        <attr name="hintSmallScreen" format="string"/>
        <attr name="hintTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="OverscrollFrameLayout">
        <attr name="childView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="GuidedEditText">
        <attr name="textEdit" format="string"/>
        <attr name="textGuide" format="string"/>
        <attr name="fontEdit" format="string"/>
        <attr name="fontGuide" format="string"/>
        <attr name="textSizeEdit" format="string"/>
        <attr name="textSizeGuide" format="string"/>
        <attr name="textColorEdit" format="string"/>
        <attr name="textColorGuide" format="string"/>
        <attr name="transformEdit" format="string"/>
        <attr name="transformGuide" format="string"/>
        <attr name="hintEdit" format="string"/>
    </declare-styleable>

    <declare-styleable name="FooterMenu">
        <attr name="leftActionText" format="string"/>
        <attr name="rightActionText" format="string"/>
        <attr name="leftActionLabelText" format="string"/>
        <attr name="rightActionLabelText" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircularSeekBar">
        <attr name="progress" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="move_outside_circle" format="boolean"/>
        <attr name="maintain_equal_circle" format="boolean"/>
        <attr name="use_custom_radii" format="boolean"/>
        <attr name="circle_x_radius" format="dimension" />
        <attr name="circle_y_radius" format="dimension" />
        <attr name="circle_stroke_width" format="dimension" />
        <attr name="pointer_radius" format="dimension" />
        <attr name="pointer_halo_width" format="dimension" />
        <attr name="pointer_halo_border_width" format="dimension"/>
        <attr name="circle_color" format="string"/>
        <attr name="circle_progress_color" format="string"/>
        <attr name="pointer_color" format="string"/>
        <attr name="pointer_halo_color" format="string"/>
        <attr name="pointer_halo_color_ontouch" format="string"/>
        <attr name="pointer_alpha_ontouch" format="integer"/>
        <attr name="start_angle" format="float"/>
        <attr name="end_angle" format="float"/>
        <attr name="circle_fill" format="string"/>
    </declare-styleable>

    <declare-styleable name="ChatheadView">
        <attr name="glyph_size" format="dimension"/>
        <attr name="initials_font_size" format="dimension"/>
        <attr name="isSelectable" format="boolean"/>
        <attr name="swap_background_and_initial_colors" format="boolean"/>
        <attr name="allow_icon" format="boolean"/>
        <attr name="show_border" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ChatheadWithTextFooter">
        <attr name="chathead_size" format="dimension"/>
    </declare-styleable>

    <attr name="circleRadius" format="dimension"/>

    <declare-styleable name="UnsentMessageIndicator">
        <attr name="textColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="circleRadius"/>
        <attr name="exclamationMarkSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SendingAnimationView">
        <attr name="backgroundColor" format="color"/>
        <attr name="circlePadding" format="dimension"/>
        <attr name="circleRadius"/>
        <attr name="backgroundCircleRadius" format="dimension"/>
        <attr name="progressColor" format="color"/>
        <attr name="fullCircleColor" format="color"/>
        <attr name="pendingStop" format="integer"/>
        <attr name="pendingDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CallingIndicator">
        <attr name="outerOpacity" format="integer"/>
        <attr name="outerRadius" format="dimension"/>
        <attr name="middleOpacity" format="integer"/>
        <attr name="middleRadius" format="dimension"/>
        <attr name="innerOpacity" format="integer"/>
        <attr name="innerRadius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="CallingButtonCircleView">
        <attr name="cbcvRadius1" format="dimension" />
        <attr name="cbcvRadius2" format="dimension" />
        <attr name="cbcvRadius3" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CursorLayout">
        <attr name="anchor1" format="dimension" />
        <attr name="anchor2" format="dimension" />
        <attr name="anchor3" format="dimension" />
        <attr name="buttonOffset" format="dimension" />
        <attr name="positionThreshold" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TypefaceTextView">
        <attr name="font" format="string" />
        <attr name="transform" format="string" />
    </declare-styleable>

    <declare-styleable name="ShieldView">
        <attr name="shieldVerified" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OtrSwitch">
        <attr name="otrTheme" format="string" />
    </declare-styleable>

    <declare-styleable name="CallControlButtonView">
        <attr name="circleIconDimension" format="dimension" />
        <attr name="circleIconGlyph" format="string" />
        <attr name="labelText" format="string" />
        <attr name="labelWidth" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelFont" format="string" />
    </declare-styleable>

    <declare-styleable name="BoundLayout">
        <attr name="maximumWidth" format="dimension" />
        <attr name="maximumHeight" format="dimension" />
        <attr name="minimumWidth" format="dimension" />
        <attr name="minimumHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IncomingControlsLayout">
        <attr name="edgeToEdgeWidth" format="dimension"/>
        <attr name="buttonDiameter" format="dimension"/>
        <attr name="avatarDiameter" format="dimension"/>
        <attr name="buttonExpandedDiameter" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Theme">
        <attr name="devicePreferenceStyle" format="reference" />
        <attr name="badgeablePreferenceScreenLikeStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="DevicePreference">
        <attr name="verified" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BadgeablePreferenceScreenLike">
        <attr name="badgeCount" format="integer" />
    </declare-styleable>
</resources>
